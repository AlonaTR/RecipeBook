<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="55dp"
        android:background="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>


    <ImageView
        android:id="@+id/imwelcome"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/carbonara"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/droid_serif_bold"
        android:text="Recipe Book"
        android:textColorHint="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rcView" />

    <TextView
        android:id="@+id/textwelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/droid_sans_mono"
        android:gravity="center"
        android:text="Hello and welcome to our recipe program! Whether you're an experienced chef or just starting out in the kitchen, we've got plenty of delicious recipes for you to try. From classic comfort foods to exotic international dishes, our collection is sure to satisfy your taste buds. So grab your apron, fire up the stove, and let's get cooking!"
        app:layout_constraintBottom_toBottomOf="@+id/imwelcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imwelcome"
        app:layout_constraintTop_toTopOf="@+id/imwelcome" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/apricot"
        app:itemIconTint="@drawable/nav_selector"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/butoon_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>